.login-header
  .login-header__icon
    = image_tag '/logo.png'

.login-main
  .login-panel
    .login-facebook
      %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
        %i.fab.fa-facebook-square
        Facebookでログイン
    .login-google
      %button#google-login.btn-default.btn-sns.btn-sns-google
        %i.fab.fa-google
        Googleでログイン
    %form{action: "", method: "POST", novalidate: "novalidate"}
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        %br/
        = f.email_field :email, autofocus: true, placeholder: "メールアドレス",autocomplete: "email"
      .field
        %br/
        = f.password_field :password, placeholder: "パスワード", autocomplete: "current-password"
          
      .actions
        = f.submit "ログイン"
    .no-acount    
      = render "devise/shared/links"

.login-footer
  .login-footer__panel
    %nav
      %ul.contents
        %li
          = link_to "#" do
            プライバシーポリシー
        %li
          = link_to "#" do
            フリマ利用規約
        %li
          = link_to "#" do
            特定商取引に関する表記
    = link_to "#" do
      = image_tag '/logo-white.png'


