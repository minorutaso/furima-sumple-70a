%div.link
  - if current_user.likes.find_by(product_id: product.id)
    = link_to unlike_path(product.id), method: :delete, remote: true do
      .heart
        .heart-icon
          %i{class: "fa fa-heart heart-red"}
          %span.favorite いいね！
          %span
            = product.likes.count.to_s
      
  - else
    = link_to like_path(product.id), method: :post, remote: true do
      .heart-b
        .heart-icon-not
          %i{class: "fa fa-heart"}
          %span いいね！
          %span
            = product.likes.count.to_s